@model GridCrudSorting.Models.ExerciseRecord
@{
    /**/

    Layout = null;

}

<script type="text/javascript">
    $(function () {
        $('.date-picker').datepicker();
        $('#date-picker').css('width', 237);
    })
</script>

@using (Html.BeginForm("Edit", "Exercise", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
{
    @Html.HiddenFor(model => model.Id)

    <div class="form-group">
        @Html.LabelFor(model => model.ExerciseName, new { @class = "control-label" })
        @Html.EditorFor(model => model.ExerciseName, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.ExerciseName)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.DurationInMinutes, new { @class = "control-label" })
        @Html.EditorFor(model => model.DurationInMinutes, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.DurationInMinutes)
    </div>
    <div><br /></div>
    <div class="form-group">
        @Html.LabelFor(model => model.ExerciseDate, new { @class = "control-label" })
        <span style="margin-left: 10px">
            @Html.TextBoxFor(model => model.ExerciseDate, new { @id = "date-picker", @class = "date-picker" })
        </span>
        @Html.ValidationMessageFor(model => model.ExerciseDate)
    </div>
    <div><br /></div>
    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-primary" />
        <input type="reset" value="Reset" class="btn btn-warning" style=" margin-left: 5px" />
    </div>


}
